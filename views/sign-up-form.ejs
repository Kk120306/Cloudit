<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sign Up</title>
</head>

<body>

    <h1>Sign Up</h1>

    <form action="/sign-up" method="POST">

        <div>
            <label for="username">Username</label>
            <input id="username" name="username" placeholder="Username" type="text" />
            <% const usernameError=errors?.find(e=> e.path === 'username'); %>
                <% if (usernameError) { %>
                    <p>
                        <%= usernameError.msg %>
                    </p>
                    <% } %>
        </div>

        <div>
            <label for="email">Email</label>
            <input id="email" name="email" placeholder="Email" type="email" />
            <% const emailError=errors?.find(e=> e.path === 'email'); %>
                <% if (emailError) { %>
                    <p>
                        <%= emailError.msg %>
                    </p>
                    <% } %>
        </div>

        <div>
            <label for="password">Password</label>
            <input id="password" name="password" type="password" />
            <% const pwError=errors?.find(e=> e.path === 'password'); %>
                <% if (pwError) { %>
                    <p>
                        <%= pwError.msg %>
                    </p>
                    <% } %>
        </div>

        <div>
            <label for="passwordC">Confirm Password</label>
            <input id="passwordC" name="passwordC" type="password" />
            <% const pwCError=errors?.find(e=> e.path === 'passwordC'); %>
                <% if (pwCError) { %>
                    <p>
                        <%= pwCError.msg %>
                    </p>
                    <% } %>
        </div>

        <div>
            <button type="submit">Sign Up</button>
            <a href="/log-in">Already have an account? Log In</a>
            <a href="/">Back to Home</a>
        </div>

    </form>

</body>

</html>