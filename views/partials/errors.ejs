<% if (locals.errors && errors.length> 0) { %>
    <div class="p-3 my-4 bg-red-900 bg-opacity-30 border border-red-700 text-red-400 rounded-lg">
        <ul class="list-disc pl-5 space-y-1 text-sm">
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
    </div>
    <% } %>